{
    "editor.rulers": [80],
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintArgs": [
        "--init-hook",
        "import sys; sys.path.insert(0, './')",
        "--generated-members=torch.*",
        "--disable=wrong-import-position",
        "--disable=invalid-name"
    ]
}
